{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block body %}
<div class="container-fuid">
    <h1 class="my-5">Gestion des Commentaires</h1>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Auteur</th>
                    <th>Commentaires</th>
                    <th>Note</th>
                    <th>Annonce</th>                                  
                    <th></th>                                  
                </tr>            
            </thead>  

            <tbody>
                {% for comment in pagination.data %}
                <tr>
                    <td>{{ comment.id }}</td>                    
                    <td>{{ comment.createdAt | date('d/m/Y') }}</td>                    
                    <td>
                        <img src="{{comment.author.picture}}" alt="avatar de {{comment.author.fullName}}" 
                        class="avatar avatar-micro">{{ comment.author.fullName }}
                    </td>                    
                    <td>{{ comment.content }}</td>                    
                    <td class="text-center">
                        <span class="badge badge-dark">{{ comment.rating }}</span>
                    </td>                    
                    <td>{{ comment.ad.title }}</td>                    
                    <td>
                        <a href="{{ path("admin_comment_edit", {'id': comment.id}) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                        <a href="{{ path("admin_comment_delete", {'id': comment.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    </td>                    
                </tr>
                {% endfor %}
            </tbody> 

        </table>

        {{ pagination.display() }}

</div>
{% endblock %}
